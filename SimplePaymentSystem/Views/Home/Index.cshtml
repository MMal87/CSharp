@model List<SimplePaymentSystem.Models.Payment>

<h1>Payment History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.Id</td>
                <td>@payment.Description</td>
                <td>@payment.Amount</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreatePayment">Make a Payment</a>
